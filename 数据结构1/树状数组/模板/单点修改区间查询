#include <bits/stdc++.h>
using namespace std;

constexpr int mxn=5e5+5;

int n,m,s[mxn];

struct BIT {
    int c[mxn];
    int lowbit(int x) {
        return x&-x;
    }

    void update(int x,int k) {
        while (x<=n) {
            c[x]+=k;
            x+=lowbit(x);
        }
    }

    int query(int x) {
        int res=0;
        while (x) {
            res+=c[x];
            x-=lowbit(x);
        }
        return res;
    }

}t;

void solve() {
    cin>>n>>m;
    for (int i=1;i<=n;i++) {
        cin>>s[i];
        t.update(i,s[i]);
    }

    while (m--) {
        int opt,x,y;
        cin>>opt>>x>>y;
        if (opt==1) {
            t.update(x,y);
        }else {
            cout<<t.query(y)-t.query(x-1)<<'\n';
        }
    }

}
